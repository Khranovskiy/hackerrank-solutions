{
  "name": "hackerrank",
  "description": "Xronosd solutions to HackerRank problems",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint-ci 30dayChallange/*.js regexp/*.js"
  },
  "keywords": [],
  "author": "Denis Khranovsky <xronosd@gmail.com> (khranovsky.com)",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "useTabs": false,
    "printWidth": 90,
    "tabWidth": 2,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "env": {
      "node": 1
    },
    "globals": {
      "exampleGlobalVariable": false
    },
    "extends": "@logux/eslint-config/node",
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-undef": [
        "off"
      ],
      "template-curly-spacing": [
        "off"
      ],
      "prefer-let/prefer-let": [
        "off"
      ],
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-missing-require": "off",
      "no-unused-expressions": "off",
      "valid-jsdoc": "off",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "gulpfile.js",
          "index.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off",
          "global-require": "off"
        }
      },
      {
        "files": [
          "bin/autoprefixer"
        ],
        "rules": {
          "global-require": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "@logux/eslint-config": "^28.1.0",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslit": "^6.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
    }
  }
}
